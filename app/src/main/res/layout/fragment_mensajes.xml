<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Mensajes">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="51dp"
        android:background="@drawable/estilollamadas"
        android:orientation="horizontal"

        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:src="@drawable/ic_baseline_add_circle_outline_24" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:onClick="Tomarfotografia"
            android:src="@drawable/ic_baseline_camera_alt_24" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Escribe un mensaje aqui"
            android:inputType="textPersonName"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="Onclickenviarmensajetoast"
            android:src="@drawable/ic_baseline_send_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/estilollamadas"
        android:backgroundTint="@color/colorPrimary"
        android:padding="20dp"
        android:text="Okey no hay problema"
        android:textColor="#F4F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:background="@drawable/estilollamadas"
        android:padding="20dp"
        android:text="Buenas noches profesor, quisiera solicitar si me puede colocar un 7 en este proyecto, ya que lo hice con todo mi esfuerzo y pasion. Espero que se encuentre bien, saludos."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="61dp"
        android:layout_height="27dp"
        android:background="@drawable/estilollamadas"
        android:backgroundTint="#1170BC"
        android:gravity="center"
        android:padding="5dp"
        android:text="Hoy"
        android:textColor="#F8F5F5"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409" />

</androidx.constraintlayout.widget.ConstraintLayout>